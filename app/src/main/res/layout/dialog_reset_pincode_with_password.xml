<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Pincode"
        android:textSize="20sp"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/account_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Account Password"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/new_pincode_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Create New Pincode"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/confirm_new_pincode_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm New Pincode"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/save_new_pincode_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save New Pincode"/>

</LinearLayout>